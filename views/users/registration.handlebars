
<div id="registration-container" class="container-fluid">
    <section class="container">
		<div class="container-page d-flex-row justify-content-center">				
			<div class="col-sm-6 offset-md-3">
				<h3 class="dark-grey">Registration</h3>
				
				<div id="username-form" class="form-group col-lg-12">
					<label>Username</label>
					<input type="" name="" class="form-control" id="username-input" value="">
					<small id="username-feedback" class=""></small>
				</div>
				
				<div id="password-form" class="form-group col-lg-12">
					<label>Password</label>
					<input type="password" name="" class="form-control" id="password-input" value="">
					<small id="password-feedback" class=""></small>
				</div>
				
				<div id="repeat-password-form" class="form-group col-lg-12">
					<label>Repeat Password</label>
					<input type="password" name="" class="form-control" id="repeat-password-input" value="">
					<small id="repeat-password-feedback" class=""></small>
				</div>
								
				<div id="email-form" class="form-group col-lg-12">
					<label>Email Address</label>
					<input type="email" name="" class="form-control" id="email-input" value="">

				  <p id="email-feedback" class=""></p>
				  <small id="email-additional-feedback" class="form-text text-muted"></small>
				</div>
				
				<div id="email-repeat-form" class="form-group col-lg-12">
					<label>Repeat Email Address</label>
					<input type="email" name="" class="form-control" id="repeat-email-input" value="">
					<small id="email-repeat-feedback" class=""></small>
				</div>	

				<button type="submit" class="btn btn-primary signup">Register</button>	
				<a href="/users/login" class="btn btn-info ml-3">Sign In</a>		
				
			
			</div>
		
		</div>
	</section>
</div>